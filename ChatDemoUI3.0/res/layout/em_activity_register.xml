<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6"
    android:orientation="vertical" >
    <include layout="@layout/system_dork"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="用户名"
            android:textSize="22dp"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@id/tv_username"
            android:hint="你的用户名"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="361dp"
        android:layout_height="2dp"
        android:background="#afaeae"
        android:layout_gravity="center_horizontal"
        />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_usernick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="昵称"
            android:textSize="22dp"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:id="@+id/usernick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@id/tv_usernick"
            android:hint="你的昵称"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="361dp"
        android:layout_height="2dp"
        android:background="#afaeae"
        android:layout_gravity="center_horizontal"
        />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码"
            android:textSize="22dp"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@id/tv_password"
            android:hint="填写密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="361dp"
        android:layout_height="2dp"
        android:background="#afaeae"
        android:layout_gravity="center_horizontal"
        />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="确认密码"
            android:textSize="22dp"
            android:textColor="#111"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@id/tv_confirm_password"
            android:hint="确认密码"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="361dp"
        android:layout_height="2dp"
        android:background="#afaeae"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:layout_marginTop="40dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#60bc71"
        android:onClick="register"
        />
</LinearLayout>